<h1 style="margin-bottom: 40px;">Add a cocktail</h1>

<div class="card" style="padding: 50px 0;">
  <h2>My new awesome cocktail</h2>
  <%= simple_form_for @cocktail do |f| %>
    <div class="text-center">
      <div style="display: inline-block;">
        <%= f.input :name, placeholder: "Whisky Sour", label: false %>
        <div class="carrier-wave-field">
          <p>Upload a photo</p>
          <%= f.input :photo, label: false, class: "btn btn-primary"  %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
      </div>
      <div class="form-actions text-center">
        <%= f.button :submit, class: "btn btn-primary", value: "Add" %>
      </div>
    </div>
  <% end %>
</div>
